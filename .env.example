# Telegram Video Bot Configuration

# Telegram Bot Token from @BotFather
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Seedance API Configuration (BytePlus)
# Get your API key from Seedance dashboard
SEEDANCE_API_KEY=your_seedance_api_key_here

# API Endpoint (usually provided by Seedance)
SEEDANCE_API_URL=https://api.seedance.example.com/v1

# Mock Mode - Set to true for testing without real API
# Will return placeholder video instead of real generation
MOCK_MODE=true

# Admin User ID for monitoring (your Telegram user ID)
ADMIN_USER_ID=8148840480

# Video Storage Path
VIDEO_STORAGE_PATH=./videos

# Max photos per user (1-4)
MAX_PHOTOS=4

# Generation timeout in seconds (300 = 5 minutes)
GENERATION_TIMEOUT=300

# Status update interval in seconds
STATUS_UPDATE_INTERVAL=30
