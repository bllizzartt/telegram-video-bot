[Unit]
Description=Telegram Video Generation Bot
Documentation=https://github.com/yourusername/telegram-video-bot
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=cortana
Group=staff
WorkingDirectory=/Users/cortana/.openclaw/workspace/projects/telegram-video-bot
ExecStart=/Users/cortana/.openclaw/workspace/projects/telegram-video-bot/venv/bin/python bot.py
Restart=always
RestartSec=10

# Environment
Environment=PYTHONUNBUFFERED=1
EnvironmentFile=/Users/cortana/.openclaw/workspace/projects/telegram-video-bot/.env

# Security hardening
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/Users/cortana/.openclaw/workspace/projects/telegram-video-bot/videos /Users/cortana/.openclaw/workspace/projects/telegram-video-bot/photos

[Install]
WantedBy=multi-user.target
